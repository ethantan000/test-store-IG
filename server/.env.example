# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/viralgoods

# JWT secret for admin authentication
JWT_SECRET=replace_with_secure_random_string_64_chars

# Server port
PORT=4000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# AliExpress Affiliate API credentials
ALIEXPRESS_APP_KEY=your_app_key
ALIEXPRESS_APP_SECRET=your_app_secret
ALIEXPRESS_TRACKING_ID=your_tracking_id

# Stripe keys
STRIPE_SECRET_KEY=sk_test_yourkey
STRIPE_WEBHOOK_SECRET=whsec_yourwebhooksecret

# Email (SMTP) configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=ViralGoods <noreply@viralgoods.com>

# Admin notification emails (comma-separated)
ADMIN_EMAILS=admin@viralgoods.com

# Inventory settings
LOW_STOCK_THRESHOLD=10

# Analytics (used in frontend)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_META_PIXEL_ID=your_pixel_id

# Admin seed credentials (used only during initial seed)
ADMIN_EMAIL=admin@viralgoods.com
ADMIN_PASSWORD=change_this_password
