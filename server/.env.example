# MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/viralgoods

# JWT secret for admin authentication
JWT_SECRET=replace_with_secure_random_string_64_chars
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_TTL_DAYS=30
ADMIN_REQUIRE_2FA=false
TWO_FACTOR_TOKEN_TTL=10m
MAGIC_LINK_TTL_MINUTES=15

# Server port
PORT=4000
SERVER_PUBLIC_URL=http://localhost:4000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# AliExpress Affiliate API credentials
ALIEXPRESS_APP_KEY=your_app_key
ALIEXPRESS_APP_SECRET=your_app_secret
ALIEXPRESS_TRACKING_ID=your_tracking_id

# Stripe keys
STRIPE_SECRET_KEY=sk_test_yourkey
STRIPE_WEBHOOK_SECRET=whsec_yourwebhooksecret

# SMTP email settings (for order confirmation & shipping update emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
FROM_EMAIL=noreply@viralgoods.com
FROM_NAME=ViralGoods
SUPPORT_EMAIL=support@viralgoods.com

# Inventory alert settings
LOW_STOCK_THRESHOLD=5
AUTO_REORDER_QUANTITY=50

# Admin seed credentials (used only during initial seed)
ADMIN_EMAIL=admin@viralgoods.com
ADMIN_PASSWORD=change_this_password
